#include <stdio.h> //scanf등 함수등의 대중적인 함수를 사용하기 위하여 선언 하는 기본적인것으로 항상 쓰는것이 좋습니다. 자바로 생각해 보았을때에는 한 패키지 에서 다른 클래스 의 내용을 import문으로 메인클래스에 참조 하는것과 비슷하다고 생각하시면 될것같습니다.
#include <stdlib.h> //난수의 값을 가진 변수를 만들기위해 rand함수를 갇고 오기 위하여 쓰인문장입니다.
#include <time.h> //time함수를 사용하기 위해 쓰인 문장입니다.


int main() {
	int computer; //가위 바위 보 프로그램에서 난수의 값이 저장되는 변수입니다.
	int user; //(사용자)즉 프로그램을 사용하는 사람이 가위 바위 보 중에서 선택한 값을 저장할 변수로 computer변수와 비교하여 승패무 판단을 하게됩니다.
	int wincount = 0; //단순히 (사용자)가 이겼을때 이긴 횟수를 증감연산자를 통해 계속 누적하여 프로그램을 종료할때 누적된 값을 출력하여 이긴 횟수를 알려주는 변수입니다.
	int losecount = 0; //단순히 (사용자)가 졌을때 진 횟수를 증감연산자를 통해 계속 누적하여 프로그램을 종료할때 누적된 값을 출력하여 진 횟수를 알려주는 변수입니다.
	int samecount = 0;//단순히 (사용자)가 비겼을때 비긴 횟수를 증감연산자를 통해 계속 누적하여 프로그램을 종료할때 누적된 값을 출력하여 비긴 횟수를 알려주는 변수입니다.

    srand(time(NULL)); //함수 설명에서 설명했으니 따로 주석을 달지 않겠습니다..

	printf("\n ■가 위:1번\n ■바 위:2번\n ■ 보:  3번\n\n ★게임 종료 : 4번\n\n\n ○입력해주세요 : ");
	while (1) {
			/*while문에 (1)을 해줌으로써 즉 1은 불대수의 1과 0처럼 1은 On 0은 OFF를 의미 하듯이 1을 사용함으로써 
			  while문 안의 문장이 무한히 반복되게 하지만 현 프로그램은 4를 입력할시 프로그램이 종료되니 도중에 종료 할수있게 되어있다. */
		scanf("%d", &user); //user변수 주소에 정수형으로 값이 변환되어 저장되는데 프로그램에서는 이 역할이 가위바위보중 선택지가 되는것이다.
		printf("\n"); //단순히 개행역할만 가능 문장이니 신경쓰지 말자..!
		
		computer = rand() % 3 + 1; //이 문장은 1~3까지의 난수를 저장하게될 문장입니다. 이 프로그램에서는 이 문장이 포인트입니다..!
		//위 함수설명 란 에서 다른 경우도 설명해 놨었죠? 

		if (user == 4) { //user가 scanf에서 4를 입력했다면 밑 문장을 실행합니다.  이 문장은 프로그램 종료를 원할때 종료와 지금 까지의 승패무의 결과를 알려줍니다.
			printf("\n\n ★이긴 횟수 : %d\n ☆진 횟수 : %d\n ＃비긴 횟수 : %d", wincount, losecount, samecount);
			printf("\n\n=======================================================================================================================▶종료를 ");
			return 0;
		}

		//-----구--분--선-----//

		if (computer == 1) { //computer변수가 난수의 값으로 1(=가위)이 되었을때 밑 문장들을 실행하는데 그 에 맞는 경우를 따져 승패무를 결정해줍니다.
			if (user == 1) {
				printf(" ◆당신은 (가위) 선택 컴퓨터는 (가위)선택 :    (´～｀)  [비겼습니다]...\n");
				samecount++;
			} else if (user == 2) {
				printf(" ◆당신은 (바위) 선택 컴퓨터는 (가위)선택 :   (*´∀｀)  [이겼습니다]~!\n");
				wincount++;
			} else if (user == 3) {
				printf(" ◆당신은 (보) 선택 컴퓨터는 (가위)선택 :   Σ(￣□￣;)  [졌습니다]...\n");
				losecount++;
			} 
		} else if (computer == 2) { //computer변수가 난수의 값으로 2(=바위)이 되었을때 밑 문장들을 실행하는데 그 에 맞는 경우를 따져 승패무를 결정해줍니다.
			if (user == 1) {
				printf(" ◆당신은 (가위) 선택 컴퓨터는 (바위)선택 :   Σ(￣□￣;)  [졌습니다]...\n");
				losecount++;
			} else if (user == 2) {
				printf(" ◆당신은 (바위) 선택 컴퓨터는 (바위)선택 :    (´～｀)  [비겼습니다]...\n");
				samecount++;
			} else if (user == 3) {
				printf(" ◆당신은 (보) 선택 컴퓨터는 (바위)선택 :   (*´∀｀)  [이겼습니다]~!\n");
				wincount++;
			}
		} else if (computer == 3) { //computer변수가 난수의 값으로 3(=보)이 되었을때 밑 문장들을 실행하는데 그 에 맞는 경우를 따져 승패무를 결정해줍니다.
			if (user == 1) {
				printf(" ◆당신은 (가위) 선택 컴퓨터는 (보) 선택 :   (*´∀｀)  [이겼습니다]~!\n");
				wincount++;
			} else if (user == 2) {
				printf(" ◆당신은 (바)위 선택 컴퓨터는 (보) 선택 :   Σ(￣□￣;)  [졌습니다]...\n");
				losecount++;
			} else if (user == 3) {
				printf(" ◆당신은 (보) 선택 컴퓨터는 (보) 선택 :    (´～｀)  [비겼습니다]...\n");
				samecount++;
			}
		} printf("\n ○입력해주세요 : ");
	}
}
